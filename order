    <script>
        const radio_Buttons = document.querySelectorAll('.checkbox');
        const btn_Element = document.querySelector('.btn_order');
        const result_Element = document.querySelector('#total');
        const product_Count = document.querySelectorAll('.input_num');

        btn_Element.addEventListener("click", function(){
            let selected_Contact_Values  = 0;
                
            for(const radio_Button of radio_Buttons){
                if(radio_Button.checked){
                    selected_Contact_Values += parseInt(radio_Button.value)
                }
            }

            if(selected_Contact_Values != 0){
                result_Element.textContent = selected_Contact_Values;
                product_Count.textContent = selected_Placeholder_Values + 1;
            }else{
                result_Element.textContent = "выберите товары";
            }
        });
