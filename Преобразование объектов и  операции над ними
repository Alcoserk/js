let obj = {
  toString() { // тут идет преобразование в стр и если пользователь вводит "2", то происходит сложение строк
    return "2";
  },
  valueOf() { // тут идет преобразование в числовой формат и в случае ввода числа будет парвильное и сложение и умножение
    return 2;
  }
};

alert(obj * 2); // 4
alert(obj + 2); // 4
alert(obj + " " + "abc");
alert(obj + "2");
