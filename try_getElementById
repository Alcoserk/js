<body>
    <button id="btn">push</button>


    <script>
        //Находидим элемент по ид и записываем его в переменную
        let elem = document.getElementById('btn');


        elem.style.background = '#fff';
        elem.style.fontSize = '24px';
        elem.style.color = '#eee';


        //Меняем текст внутри элемента
        elem.innerHTML = 'Другой текст';


        //Добавим элементу класс
        elem.classList.add('border');
    </script>


    
