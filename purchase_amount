<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
        let buy_count = +prompt("Количество товаров", 0);
        let price = 0;
        let total = 0;
        for(let i = 0; i < buy_count; i++){
            price = +prompt("Стоимость товара", 0);
            total += price;
        }

        alert(`Общая сумма покупки: ${total}`)
    </script>
</body>
</html>
